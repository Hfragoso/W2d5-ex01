<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.heber.w2d5_ex01.MainActivity">


    <ImageView
        android:id="@+id/iv_displayPicture"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        />

    <EditText
        android:id="@+id/et_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/lbl_Name"
        />

    <EditText
        android:id="@+id/et_lastname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/lbl_last_name"
        />

    <Button
        android:id="@+id/btn_camera"
        android:onClick="LaunchCamera"
        android:text="@string/lbl_btn_Camera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_detail"
        android:onClick="ToDetailsActivity"
        android:text="@string/lbl_btn_Detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
